# Flask Configuration
FLASK_ENV=development  # Set to 'production' for production deployment
SECRET_KEY=your-secret-key-here-change-in-production  # Generate with: python -c "import secrets; print(secrets.token_hex(32))"

# Database
DATABASE_URL=sqlite:///database.db  # For production, consider PostgreSQL

# Site URL (for invitation emails)
SITE_URL=http://localhost:5001  # Set to your production URL (e.g., https://your-app.onrender.com)

# Email Configuration (for sending invitations)
# Leave MAIL_USERNAME empty to disable email sending (invitation links will be shown on-screen)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=  # Your email address
MAIL_PASSWORD=  # App-specific password (for Gmail, create at https://myaccount.google.com/apppasswords)
MAIL_DEFAULT_SENDER=noreply@household-tracker.com

# Production-specific (Render)
# PORT=10000  # Render sets this automatically
